@page "/EmployeeList"
@inherits EmployeeListBase
@attribute [Authorize]


    <h3>EmployeeList</h3>
    <div class="card-deck">
        @foreach (var employee in Employees)
        {
            <div class="card ml-3" style="min-width :18rem ; max-width:30.5%;">
                <div class="card-header">
                    <h3> @employee.FirstName @employee.LastName</h3>
                </div>
                <img  class="card-img-top img-thumbnail" src="@employee.PhotoPath"/>
                <div class="card-footer text-center ">
                    <a href="@($"EmployeeDetails/{employee.EmployeeId}")" class="btn btn-primary">  View</a>
                    <a href="@($"editemployee/{employee.EmployeeId}")" class="btn btn-primary"> Edit </a>
                    <button @onclick="Delete_Click" class="btn btn-primary">  Delete </button>

                </div>



            </div>



        }








    </div>