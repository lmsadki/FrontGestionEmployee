@page "/EmployeeDetails/{id}"
@page "/EmployeeDetails"
@inherits EmployeeDetailsBase

@if (Employee == null || Employee.Department == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Employee.FirstName @Employee.LastName  @Coordinates </h1>
                </div>
                <div class="card-body text-center">
                    <img class="card-img-top" src="@Employee.PhotoPath " @onmousemove="@(e => Coordinates = $"X ={e.ClientX} Y = {e.ClientY}")" />

                    <h4>Employee ID : @Employee.EmployeeId</h4>
                    <h4>Email : @Employee.Email</h4>
                    <h4>BirthDate : @Employee.DateOfBrith.ToShortDateString()</h4>
                    <h4>Departement : @Employee.Department.DepartmentName</h4>
                    <button class="btn btn-primary" @onclick="@Button_Click">@ButtonText </button>
                    
                </div>
                <div class="card-footer text-center @CssClass">
                    <a href="/" class="btn btn-primary">Back</a>
                    <a href="@($"editemployee/{Employee.EmployeeId}")" class="btn btn-primary m-1">Edit</a>                   
                </div>
            </div>
        </div>
    </div>
}
