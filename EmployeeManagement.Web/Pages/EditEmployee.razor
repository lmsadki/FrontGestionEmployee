@page "/editemployee/{id}"
@inherits EditEmployeeBase
@using EmployeeManagement.Model

<EditForm Model="@Employee" OnValidSubmit="HandleValidSubmit">
    <h3> Edit Employee</h3>
    <hr />
    <div class="form-group row">
        <label for="fistName" class="col-2 col-form-label">
            fistName

        </label>
        <div class="col-sm-10">
            <InputText id="fistName" class="form-control" placeholder="fistName"
                       @bind-Value="Employee.FirstName" />
            <ValidationMessage For="@(()=>Employee.FirstName)"/>

        </div>
    </div>


    <div class="form-group row">
        <label for="lastName" class="col-2 col-form-label">
            fLastName

        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="lastName"
                       @bind-Value="Employee.LastName" />
            <ValidationMessage For="@(()=>Employee.LastName)" />

        </div>
    </div>


    <div class="form-group row">
        <label for="email" class="col-2 col-form-label">
            E-mail

        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="email"
                       @bind-Value="Employee.Email" />
            <ValidationMessage For="@(()=>Employee.Email)" />

        </div>

    </div>
    <div class="form-group row">
        <label for="department" class="col-sm-2">
            Department
        </label>
        <div class="col-sm-10">
            <InputSelect id="department" @bind-Value="DepartmentId" class="form-control">

                @foreach (var dept in Departments){

                    <option value="@dept.DepartmentId"> @dept.DepartmentName </option>
                }

            </InputSelect>

        </div>

    </div>
   
    <div class="form-group row">
        <label for="gender" class="col-sm-2 col-form-label">Gender </label>
        <div class="col-sm-10">
            <InputSelect @bind-Value="Employee.Gendre" class="form-control">

                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender </option>
                }

            </InputSelect>

        </div>

    </div>


    <div class="form-group row">
        <label for="dateOfBirth" class="col-sm-2 col-form-label">dateOfBirth </label>

        <InputDate @bind-Value="Employee.DateOfBrith" class="form-control" />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>